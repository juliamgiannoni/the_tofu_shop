<div class="container-fluid">
    <h4>SHOPPING CART</h4>
        <hr>
        <% if @current_customer.cart.products.exists? %>
        <table class="table">
            <thead>
                <tr class="table-header">
                    <th class="col-md-5">ITEM</th>
                    <th class="col-md-3">EDIT</th>
                    <th class="col-md-1">QUANTITY</th>
                    <th class="col-md-3 text-right">SUBTOTAL</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <% @current_customer.cart.products.each do |product| %>
                        <td>
                            <div class="d-inline-block col-md-4 table-data">
                                <%= link_to (image_tag product.product_image, {height: 110}), product_path(product) %>
                            </div>
                            <div class="d-inline-block col-md-7 table-data">
                                <%= link_to product.product_name, product_path(product) %><br>
                                $<%= product.product_price %>
                            </div>
                        </td>
                        <td><%= link_to "REMOVE" %></td>
                        <td>1</td>
                        <td class="text-right">$<%= product.product_price %></td>
                    <% end %>
            <thead>
                <tr>
                    <td class="col-md-5"></td>
                    <td class="col-md-2"></td>
                    <td class="col-md-2">GRAND TOTAL</td>
                    <td class="col-md-3 text-right">$<%= @current_customer.cart.products.sum(:product_price) %></td>
                </tr>
            </thead>
            </tbody>
        </table>
            <%= button_to "CHECKOUT", destroy_path, method: :delete, class: "button" %>

        <% else %>
            <br>
            <%= "You currently have no items in your shopping cart." %><br><br><br>
            <%= link_to "$$$ GIVE US YOUR MONEY $$$", root_path, class: "button" %>
        <% end %>
</div>



