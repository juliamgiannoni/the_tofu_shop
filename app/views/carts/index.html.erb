<div class="container-fluid">
    <h4>SHOPPING CART</h4>
        <hr>
        <table class="table">
            <thead>
                <tr>
                    <th class="col-md-4">ITEM</th>
                    <th class="col-md-3">EDIT</th>
                    <th class="col-md-1">QUANTITY</th>
                    <th class="col-md-4 text-right">SUBTOTAL</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <% @products.each do |product| %>
                        <td>
                            <div class="d-inline-block col-md-4 table-data">
                                <%= link_to (image_tag product.product_image, {height: 110}), product_path(product) %>
                            </div>
                            <div class="d-inline-block col-md-7 table-data">
                                <%= link_to product.product_name, product_path(product) %><br>
                                $<%= product.product_price %>
                            </div>
                        </td>
                        <td>remove</td>
                        <td>2</td>
                        <td class="text-right">$10</td>
                </tr>
                    <% end %>
            <thead>
                <tr>
                    <td class="col-md-4"></td>
                    <td class="col-md-3"></td>
                    <td class="col-md-1">SUBTOTAL<br><br>GRANDTOTAL</td>
                    <td class="col-md-4 text-right">product prices sum<br><br>cart total</td>
                </tr>
            </thead>

            </tbody>
        </table>
</div>

