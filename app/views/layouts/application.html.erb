<!DOCTYPE html>
<html>
  <head>
    <title>The Tofu Shop</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <link href="https://fonts.googleapis.com/css?family=Heebo:100,300" rel="stylesheet">

    <%= favicon_link_tag 'favicon.ico' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header collapse navbar-collapse navbar-right">
          <a class="navbar-brand" href="/">The Tofu Shop</a>
          <a href="/customers/new" >
              <p class="navbar-text collapse navbar-collapse">
                <% if current_customer %>
                    Welcome, <%= current_customer.customer_name %>
                    &nbsp;&nbsp;|&nbsp;&nbsp;
                    <%= link_to "Log Out", session_path("dummy"), method: :delete %>
                <% else %>
                    <%= link_to "Register", register_path %>
                    &nbsp;&nbsp;|&nbsp;&nbsp;
                    <%= link_to "Login", "/login" %>
                <% end %>
                &nbsp;&nbsp;|&nbsp;&nbsp;
                <%= link_to "Cart", "#" %>
            </p>
          </a>
      </div>
    </div>
  </nav>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
              <li><a href="/">Accessories</a></li>&nbsp;&nbsp;
              <li><a href="/">Bed</a></li>&nbsp;&nbsp;
              <li><a href="/">Clothing</a></li>&nbsp;&nbsp;
              <li><a href="/">Home</a></li>&nbsp;&nbsp;
              <li><a href="/">Miscellaneous</a></li>&nbsp;&nbsp;
              <li><a href="/">Toys</a></li>
        </ul>
      </div>
    </div>
  </nav>





    <div class="container">
        <div class="row">
            <%= yield %>
        </div>
    </div>
  </body>
</html>
